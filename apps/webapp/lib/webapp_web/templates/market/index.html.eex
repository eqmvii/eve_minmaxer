<h1>Market</h1>

<%= form_for @conn, Routes.market_path(@conn, :search), fn f -> %>
  <%= text_input f, :search %>
  <br />
  <%= submit "Search" %>
<% end %>

<hr />

<%= if assigns[:searched_for] do %>
  <h2>Results For "<%=assigns[:searched_for] %>"</h2>
  <%= assigns[:search_result] %>
<% end %>
